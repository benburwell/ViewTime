{
    "manifest_version": 2,
    "name": "ViewTime for YouTube",
    "short_name": "ViewTime",
    "version": "1.0.4",
    "description": "Shows you how long a YouTube video has been watched for.",
    "homepage_url": "http://www.benburwell.com/projects/viewtime/",
    "icons": {
        "16": "Icon-16.png",
        "128": "Icon-128.png",
        "256": "Icon-256.png"
    },
    "permissions": [
        "http://www.youtube.com/",
        "https://www.youtube.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://www.youtube.com/watch*",
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "jquery.js",
                "moment.js",
                "viewtime.js"
            ]
        }
    ]
}
