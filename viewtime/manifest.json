{
    "manifest_version": 2,
    "name": "ViewTime",
    "description": "Shows you how long a YouTube video has been watched for.",
    "version": "1.0.0",
    "update_url": "http://updates.benburwell.com/chrome.xml",
    "homepage_url": "http://www.benburwell.com/projects/viewtime/",
    "icons": {
        "16": "Icon-16.png",
        "128": "Icon-128.png"
    },
    "permissions": [
        "http://www.youtube.com/",
        "https://www.youtube.com/"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://www.youtube.com/watch*",
                "https://www.youtube.com/watch*",
                "http://www.youtube.com/user/*",
                "https://www.youtube.com/user/*"
            ],
            "js": [
                "jquery.js",
                "moment.js",
                "viewtime.js"
            ]
        }
    ]
}
